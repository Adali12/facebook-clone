
<h1 style="margin-left:1080px;">Create a New Account</h1>
<% if @clone.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@clone.errors.count, "error") %> prohibited this @clone from being saved:</h2>
    <ul>
    <% @clone.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<center>
<%= form_with(model: @clone,class:"frm", local: true) do |form|  %>  
    <div class="form-group" style="margin-left:1080px;">
    <%= form.text_field :First_name,class:"form-control",placeholder:"Enter your First_name",style:"width:200px;" %>
  </div>
  <div class="form-group" style="margin-left:1080px;">
    <%= form.text_field :Last_name,class:"form-control",placeholder:"Enter your Last_name",style:"width:200px;" %>
  </div>
  <div class="form-group" style="margin-left:1080px;">
    <%= form.text_field :email,class:"form-control",placeholder:"Enter your email",style:"width:200px;" %>
  </div>
  <div class="form-group" style="margin-left:1080px;">
    <%= form.password_field :password,class:"form-control",placeholder:"Enter your password ",style:"width:200px;" %>
  </div>
  <div class="form-group" style="margin-left:1080px;">
    <%= form.password_field :password_confirmation,class:"form-control",placeholder:"Enter your password again ",style:"width:200px;" %>
  </div>
  <div class="actions" style="margin-left:1080px;">
  <%= form.submit"Create my account",class:"btn btn-primary" %>
  <p>do you have account? <br> <%= link_to "Login", new_session_path, class:"nav-link", style:"color:white;",class:"btn btn-primary" %> </p>
  </div>
<% end %>
</center>

  