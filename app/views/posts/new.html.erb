
  <% if logged_in? %>
  <div class="card" style="width: 30rem;margin-left: 30rem;">
  <div class="card-header"><h1>New Post</h1></div>
  <div class="card-body"><%= render 'form', post: @post %></div> 
  <div class="card-footer"><%= link_to 'Back', posts_path %></div>
</div>
<%else%>
<h1 style="text-align:center;">Log in</h1>
<center>
<%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
  <div class="form-group">
    <%= f.email_field :email,class:"form-control",id:"formGroupExampleInput", placeholder:"Enter Your Email",style:"width:400px;" %>
  </div>
  <div class="form-group">
    <%= f.password_field :password,class:"form-control",id:"formGroupExampleInput2", placeholder:"Enter Your Password",style:"width:400px;" %><br>
    <%= f.submit "Log in",class:"btn btn-primary" %>
    <p>Don't have an account?<br> <%= link_to "sign up", new_clone_path, class:"nav-link", style:"color:white;",class:"btn btn-primary",style:"margin-left:5px;" %></p>
  </div>
<% end %>
</center>
  
<% end%>