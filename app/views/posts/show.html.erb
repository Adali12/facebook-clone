
<HR>
<hr class="hr">
<div class="card" style="width: 30rem;margin-left: 30rem;">
  <div class="card-header"><p>
  <strong>User name:</strong>
  <%= @post.clone.First_name %>
</p></div>
  <div class="card-body"><p>
  <strong>Content:</strong>
  <%= @post.content %>
</p><p>
  <%- if @post.image.present?  %>
  <td> <%= image_tag @post.image.url(),size:"100x80",class:"rounded"  %></td>
  <% end %>
</p></div> 
  <div class="card-footer"><%= link_to 'Edit', edit_post_path(@post),class:"btn btn-primary" %> |
  <%= link_to 'Back', posts_path,class:"btn btn-primary" %></div>
</div>